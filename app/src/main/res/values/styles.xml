<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackgroundFloating">@color/colorPopUpBackground</item>
    </style>

    <style name="WeatherData">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextLight</item>
    </style>

    <style name="SecondaryWeatherData">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/secondaryTextLight</item>
    </style>

    <style name="WeatherLabel">
        <item name="android:layout_width">175dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/secondaryTextLight</item>
    </style>

    <style name="SecondaryWeatherLabel">
        <item name="android:layout_width">175dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryTextLight</item>
    </style>

    <style name="CityName">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondaryTextLight</item>
    </style>
</resources>
